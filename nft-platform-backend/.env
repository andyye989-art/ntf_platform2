# 数据库配置
DATABASE_URL=sqlite:///database/app.db

# JWT配置
JWT_SECRET_KEY=your_jwt_secret_key_here_change_in_production
JWT_ACCESS_TOKEN_EXPIRES=86400

# 区块链配置
WEB3_PROVIDER_URL=https://mainnet.infura.io/v3/your_infura_project_id
POLYGON_PROVIDER_URL=https://polygon-mainnet.infura.io/v3/your_infura_project_id
TESTNET_PROVIDER_URL=https://goerli.infura.io/v3/your_infura_project_id

# 智能合约地址
ARTIFACT_FACTORY_ADDRESS=0x...
ARTIFACT_MARKETPLACE_ADDRESS=0x...

# IPFS配置
IPFS_API_URL=https://ipfs.infura.io:5001
IPFS_GATEWAY_URL=https://ipfs.io/ipfs/
IPFS_PROJECT_ID=your_ipfs_project_id
IPFS_PROJECT_SECRET=your_ipfs_project_secret

# 文件上传配置
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,mp4,mov,avi,glb,gltf,obj,fbx

# 邮件配置（可选）
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_email_password

# Redis配置（可选，用于缓存）
REDIS_URL=redis://localhost:6379/0

# 安全配置
SECRET_KEY=your_flask_secret_key_here_change_in_production
BCRYPT_LOG_ROUNDS=12

# API配置
API_RATE_LIMIT=100  # 每分钟请求限制
CORS_ORIGINS=*

# 平台配置
PLATFORM_NAME=Digital Artifact NFT Platform
PLATFORM_FEE_PERCENTAGE=2.5
MIN_PRICE=0.001  # 最小价格（ETH）

# 开发模式
DEBUG=True
TESTING=False

